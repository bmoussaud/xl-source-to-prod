pipeline {
    environment {
        imageTag = "localhost:5000/xl-demo-frontend:1.0.$BUILD_NUMBER"
        dockerCredentials = 'minikube'
        dockerImageFront = ''
        dockerImageBack = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/bmoussaud/xl-source-to-prod.git'
            }
        }
        stage('Building backend image') {
            steps {
                script {
                    docker.withServer('tcp://192.168.130.134:2376', dockerCredentials) {
                        dockerImageBack = docker.build(imageTag, "services/backend")
                    }
                }
            }
        }
        stage('Building frontend image') {
            steps {
                script {
                    docker.withServer('tcp://192.168.130.134:2376', dockerCredentials) {
                        dockerImageFront = docker.build(imageTag, "services/frontend")
                    }
                }
            }
        }
        stage('Push Images to Registry') {
            steps {
                script {
                    docker.withServer('tcp://192.168.130.134:2376', dockerCredentials) {
                        dockerImageFront.push()
                        dockerImageBack.push()
                    }
                }
            }
        }

        stage("Apply xebialabs.yaml") {
            steps {
                sh "sed -i.bak 's#xl-demo-frontend:latest#${imageTag}#' ./services/frontend/manifests/*.yml"
                sh "sed -i.bak 's#xl-demo-backend:latest#${imageTag}#' ./services/backend/manifests/*.yml"
                sh "./xlw apply -v -f services/xebialabs.yaml --values appversion=1.0.$BUILD_NUMBER"
            }
        }

    }
}